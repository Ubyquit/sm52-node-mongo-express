<div class="card card-body p-4 rounded-10 bg-dark text-white">
  <h3>Add a Tasks</h3>
  <form action="/tasks/add" method="post">
    <div class="mb-3">
      <label for="title" class="form-label">Write a title:</label>
      <input
        type="text"
        class="form-control"
        id="title"
        placeholder="Title"
        name="title"
        autofocus
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        id="description"
        cols="80"
        name="description"
        placeholder="Add a description"
      ></textarea>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="sexo" value="Hombre" checked />
      <label class="form-check-label">
        Hombre
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="sexo" value="Mujer" />
      <label class="form-check-label">
        Mujer
      </label>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>

  </form>
</div>